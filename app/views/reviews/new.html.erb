<div class="container">

<h1>New review to <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<div>
    <%= link_to "Back to restaurants' page", restaurant_path(@restaurant) %> | <br>

    <%= link_to "Back to restaurants", restaurants_path %> | <br>

  </div>

</div>
