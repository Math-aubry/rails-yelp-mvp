<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @restaurant %>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content%> | <%= review.rating %></li>
    <% end %>
  </ul>
  <br>

  <div>
    <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %> | <br>

    <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> | <br>

    <%= link_to "Back to restaurants", restaurants_path %> | <br>

    <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
  </div>
</div>
